<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net6.0</TargetFramework>
    <RollForward>Major</RollForward>
    <PublishReadyToRun>false</PublishReadyToRun>
    <TieredCompilation>false</TieredCompilation>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="MonoGame.Framework.DesktopGL" Version="3.8.1.303" />
  </ItemGroup>

  <ItemGroup>
    <MonoGameContentReference Include="Content\Content.mgcb" />
  </ItemGroup>

  <Target Name="BuildContent" BeforeTargets="Build">
    <Exec Command="dotnet tool run mgcb Content/Content.mgcb /build /platform:DesktopGL /outputDir:$(OutputPath)Content" ContinueOnError="true" IgnoreExitCode="true" />
  </Target>
  
  <Target Name="CopyContent" AfterTargets="Build">
    <ItemGroup>
      <ContentFiles Include="Content\**\*.xnb" />
    </ItemGroup>
    <Copy SourceFiles="@(ContentFiles)" DestinationFolder="$(OutputPath)Content\%(RecursiveDir)" SkipUnchangedFiles="true" />
  </Target>

</Project>

